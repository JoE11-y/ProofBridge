{
  "compilerOptions": {
    "declaration": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2023",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "types": [
      "node"
    ],
    "outDir": "dist"
  },
  "include": [
    "src/index.ts",
    "src/MMR.ts",
    "src/Hasher.ts",
    "src/LevelDB.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-mmr.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}